{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["OS", "RUNNER_OS", "NODE_ENV"],
  "cacheDir": ".cache/turbo",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint.tsc": {
      "dependsOn": ["build", "^lint.tsc"]
    },
    "lint.eslint": {
      "dependsOn": ["build", "^lint.eslint"]
    },
    "lint": {
      "dependsOn": ["lint.tsc", "lint.eslint"]
    },
    "test": {
      "dependsOn": ["build", "^test"]
    }
  },
  "ui": "stream"
}
